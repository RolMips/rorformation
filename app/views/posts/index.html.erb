<h1>Listes des articles</h1>
<p>
  <% case @filter %>
    <% when '0' %>
      <a href="<%= posts_path %>" class="btn btn-secondary btn-sm">Tous</a>
      <a href="<%= posts_path(filter: 1) %>" class="btn btn-secondary btn-sm">En ligne</a>
      <a href="<%= posts_path(filter: 0) %>" class="btn btn-primary btn-sm">Hors ligne</a>
    <% when '1' %>
      <a href="<%= posts_path %>" class="btn btn-secondary btn-sm">Tous</a>
      <a href="<%= posts_path(filter: 1) %>" class="btn btn-primary btn-sm">En ligne</a>
      <a href="<%= posts_path(filter: 0) %>" class="btn btn-secondary btn-sm">Hors ligne</a>
    <% else %>
      <a href="<%= posts_path %>" class="btn btn-primary btn-sm">Tous</a>
      <a href="<%= posts_path(filter: 1) %>" class="btn btn-secondary btn-sm">En ligne</a>
      <a href="<%= posts_path(filter: 0) %>" class="btn btn-secondary btn-sm">Hors ligne</a>
    <% end %>
</p>
<p>
  <a href="<%= new_post_path %>" class="btn btn-success btn-sm">Ajouter un nouvel article</a>
</p>

